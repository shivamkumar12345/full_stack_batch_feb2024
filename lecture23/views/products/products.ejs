<% layout('layout/boilerplate') -%>

<main class="d-flex justify-content-around flex-wrap">
   
    <% products.map((item =>{  %>
    <div class="card mb-4" style="width: 18rem;">
        <img src=<%=item.images %> class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text"> <%= item.description %></p>
          <a href="/add-product" class="btn btn-primary">Add Product</a>
          <a href="/product/detail/<%=item._id %>" class="btn btn-secondary">Details</a>
        
       
        </div>
    </div>
    
    <% })) %>


</main>